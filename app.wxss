/**app.wxss**/
@import "/utils/font.wxss";

page {
  background: #faf8e1;
  font-family: "webfont";
}
:root {
  --button-green: #4fb262;
  --button-gray: #a4a49c;
  --green-btn-text: #bbf4bd;
  --gray-btn-text: #bfc0b2;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
/* Confirm Button Here! */
.confirm-btn {
  position: relative;
  font-size: 30rpx;
  padding: 3rpx;
  background-color: #f5efd5;
  border: #000000;
  border-radius: 32rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.confirm-btn-icon {
  background-color: #716a58;
  color: #f5efd5;
  border-radius: 50%;
  margin-right: 10rpx;
}
.confirm-btn-text {
  color: #716a58;
}
