/* pages/roomCreate/roomCreate.wxss */
page {
  background-color: #218ec5;
  color: #218ec5;

}
.roomCreate {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100vw;
  height: 100vh;
}
.dodoImg-box {
  margin-top: 25rpx;
  background-color: lightblue;
  width: 84%;
  height: 130rpx;
  padding: 5rpx;
  padding-top: 15rpx;
  display: flex;
  justify-content: center;
  border-radius: 100rpx;
}
.dodoImg {
  height: 100%;
}

.settings {
  background-color: #218ec5;
  width: 95%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 5rpx 5rpx;
}

.flightOpt {
  background-color: lightblue;
  width: 90%;
  height: 50px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-evenly;
}

.settings-box {
  width: 94%;
  height: 70vh;
  background-color: lightblue;
  border-radius: 50rpx;
  margin-top: 5rpx;
  padding-top: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  overflow: scroll;
}
.flightOpt-btn {
  background-color: #218ec5;
  height: 70%;
  border-radius: 15px;
  padding: 5px
}
.flightOpt-btn-active {
  background-color: lightgreen;
}

.settings-layout {
  min-height: 80rpx;
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 5px 0;
  font-size: 30rpx;
  border-bottom: #218ec5 2px dotted;
}
.settings-title {
  width: 35%;
}
.settings-content {
  background-color: lightblue;
  width: 65%;
  border-radius: 15rpx;
}
.extend-text {
  width: 100%;
  border-radius: 25rpx;
  height: 200rpx;
  background-color: lightcyan;
  padding-left: 10rpx;
  padding-top: 10rpx;
}

.bottombar {
  margin-top: 20rpx;
  width: 94%;
  height: 70rpx;
  justify-content: center;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
}
.bottombar-btn-left {
  height: 100%;
  background-color: #fda156;
  border-radius: 50rpx;
  border: solid #f5f7e1 7rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
}
.bottombar-btn-right {
  height: 100%;
  background-color: #4fb262;
  border-radius: 50rpx;
  border: solid #f5f7e1 7rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
}
.bottombar-btn-icon {
  position: relative;
  height: 30rpx;
  margin-right: 15rpx;
}
.bottombar-btn-text{
  color: #bef4c2;
  text-align:center;
  line-height:30rpx;
  font-size:30rpx;
}
.disable {
  color: gray;
}
