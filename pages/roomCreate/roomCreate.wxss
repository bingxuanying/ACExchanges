/* pages/roomCreate/roomCreate.wxss */
.roomCreate {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100vw;
}

.dodoImg {
  background-color: lightpink;
  width: 95%;
  height: 50px;
}

.settings {
  background-color: lightyellow;
  width: 95%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 10px;
  padding-bottom: 10px;
}

.flightOpt {
  background-color: lightgray;
  width: 90%;
  height: 50px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-evenly;
}

.flightOpt-btn {
  height: 70%;
  border-radius: 15px;
  padding: 5px
}

.flightOpt-btn-active {
  background-color: lightsalmon;
}

.settings-layout {
  background-color: lightgreen;
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  padding-top: 5px;
  font-size: 14px;
}

.settings-title {
  width: 35%;
}

.settings-content {
  background-color: white;
  width: 65%;
}

.bottombar {
  background-color: lightblue;
  width: 95%;
  height: 50px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-evenly;
}

.bottombar-btn {
  height: 70%;
  border-radius: 15px;
  padding: 5px
}