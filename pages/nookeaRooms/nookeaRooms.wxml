<block>
  <nav-bar navInfo="交易房间:{{db.itemInfo.zh_name}}" back="True" />
  <view class="nookeaRooms" style="height: calc(100vh - {{statusBarHeight}}px - 44px)">
    <!-- Master Info -->
    <view class="top-box">
      <image class="top-box-bg" src="{{img.modalBG_ballon}}" mode="widthFix" />

      <view class="master-avatar">
        <view class="room-status {{db.isActive?'status-active':'status-inactive'}}">
          {{db.isActive?'热卖中':"已关闭"}}
        </view>
        <image class="master-avatar-img" src="{{db.masterInfo.avatarUrl}}" mode="widthFix" />
        <view class="tool-closeBtn">
          <view class="tool-closeBtn-greenbox {{ !db.isActive ?'closeBtn-click':'closeBtn-unclick'}}" bindtap="closeRoomClick">
            <view class="tool-box-text">{{db.isActive? 'ON':'OFF'}}</view>
          </view>
        </view>
      </view>
      
      <view class="master-info">
        <view class="edit-btn-box" hidden="{{!isMaster}}" bindtap="settingClick">
          <view class="edit-btn-text">编辑</view>
          <image class="edit-btn-img" src="../../assets/icons/settingIcon2.png" />
        </view>

        <view class="master-info-row">
          <view class="master-info-row-text">{{db.masterInfo.nickname}}</view>
          <image src="{{db.masterInfo.gender===1?'../../assets/icons/genderMale.png':'../../assets/icons/genderFemale.png'}}" 
            mode="widthFix" style="margin-right:10rpx; width:20rpx;" />
          <view class="master-info-row-text">{{db.masterInfo.islandName}}</view>
          <text style="height:40rpx; margin-left:-10rpx; line-height:40rpx; font-size:24rpx;">岛</text>
        </view>
        
        <view class="master-info-row">
          <view class="master-info-row-title">微信号</view>
          <text class="master-info-row-text" style="max-width:300rpx;">{{db.content.isWxid?db.content.wxidText:'房主没透露哦~'}}</text>
        </view>

        <view class="master-info-row">
          <view class="master-info-row-title">在售物品</view>
          <image class="master-info-item-icon" src="{{db.itemInfo.img_url}}" mode="heightFix"></image>
          <view class="master-info-row-text">{{db.itemInfo.zh_name}}</view>
        </view>

        <block>
        <view class="master-info-row">
          <view class="master-info-row-title">接受方式</view>
          <block wx:if="{{db.content.bell.length>0&&db.content.bell!=='0'}}">
            <image class="master-info-item-icon" src="{{img.BellIcon}}" mode="heightFix" />
            <text class="master-info-row-text">{{db.content.bell}}</text>
          </block>
        </view>
        <view class="master-info-row" style="margin-top:-5rpx" wx:if="{{db.content.ticket.length>0&&db.content.ticket!=='0'}}">
          <image class="master-info-item-icon" src="{{img.TicketIcon}}" mode="heightFix" style="margin-left:145rpx;" />
          <text class="master-info-row-text">{{db.content.ticket}}</text>
        </view>
        <view class="master-info-row" style="margin-top:-5rpx" wx:if="{{db.content.wishlist}}">
          <image class="master-info-item-icon" src="{{img.WishlistIcon}}" mode="heightFix" style="margin-left:145rpx;" />
          <text class="master-info-row-text">心愿单</text>
        </view>
        </block>

        <view class="master-info-row" style="height:100%;">
          <view class="master-info-row-title" style="align-self:flex-start;">留言板</view>
          <text class="master-info-row-notes">{{db.content.notes}}</text>
        </view>     

      </view>
    </view>
      

    <!-- Switch Bar -->
    <view class="switch-box">
      <view class="moving-box {{firstTimeLoad? '': (commentSelect ? 'slide-left':'slide-right')}}" />
      <view class="switch-box-btn" bindtap="commentClick">
        <image class="switch-box-icon" src="../../assets/icons/CommentIcon.png" />
        <view class="switch-box-text {{commentSelect?'active':'inactive'}}">留言</view>
      </view>
      <view class="switch-box-btn" bindtap="wishlistClick">
        <image class="switch-box-icon " src="{{img.WishlistIcon}}" />
        <view class="switch-box-text {{commentSelect?'inactive':'active'}}">心愿单</view>
      </view>
    </view>
    

    <!-- Board -->
    <view class="board {{firstTimeLoading?'':(commentSelect?'slideleft':'slideright')}}">
      <!-- Comments -->
      <view class="board-left">
        <!-- 这是slave的留言按钮 -->
        <view class="slave-reply" wx:if="{{addReplyEnabled && !isMaster}}" bindtap="modalShow">
          <view class="slave-reply-icon">+</view>
          <view class="slave-reply-btn">我要留言</view>
        </view>
        <view class="board-content" wx:for="{{db.comments}}" wx:for-index="commentIndex" wx:key="comments">
          <view class="conversation" wx:for="{{item.conversations}}" wx:for-item="conversation" wx:for-index="conversationIndex" wx:key="conversations">
            <view class="conversation-head" wx:if="{{conversationIndex == 0}}">
              <view class="conversation-head-avatar">
                <image style="width:100%;" mode="widthFix" src="{{item.slaveInfo.avatarUrl}}" />
              </view>
              <view class="conversation-head-info">
                <view class="conversation-head-info-name">
                  <image class="slave-info-icon" src="../../assets/icons/AvatarIcon.png" />
                  <view class="slave-name">{{item.slaveInfo.nickname}}</view>
                  <image class="slave-info-icon" src="../../assets/icons/IslandIcon2.png" />
                  <view class="slave-island">{{item.slaveInfo.islandName}}</view>
                  <wxs module="filter" src="../../utils/uti.wxs"></wxs>
                  <view class="converstaion-head-info-time" wx:if="{{filter.getDays(nowTimestamp, item.conversations[item.conversations.length - 1].timestamp) > 0}}">
                    {{filter.getDays(nowTimestamp , item.conversations[item.conversations.length - 1].timestamp)}}天前
                  </view>
                  <view class="converstaion-head-info-time" wx:elif="{{filter.getHours(nowTimestamp , item.conversations[item.conversations.length - 1].timestamp) > 0}}">
                    {{filter.getHours(nowTimestamp, item.conversations[item.conversations.length - 1].timestamp)}}小时前
                  </view>
                  <view class="converstaion-head-info-time" wx:elif="{{filter.getMins(nowTimestamp , item.conversations[item.conversations.length - 1].timestamp) > 0}}">
                    {{filter.getMins(nowTimestamp , item.conversations[item.conversations.length - 1].timestamp)}}分前
                  </view>
                  <view class="converstaion-head-info-time" wx:else>刚刚</view>
                </view>
                <view class="conversation-head-info-offering">
                  出价:
                  <image style="height: 50rpx; width: 50rpx;" wx:if='{{item.paymentType.bell}}' src="{{img.BellIcon}}" mode="widthFix"></image>
                  <image style="height: 50rpx; width: 50rpx;" wx:if='{{item.paymentType.ticket}}' src="{{img.TicketIcon}}" mode="widthFix"></image>
                  <image style="height: 50rpx; width: 50rpx;" wx:if='{{item.paymentType.wishlist}}' src="{{img.WishlistIcon}}" mode="widthFix"></image>
                </view>
                <view class="conversation-head-info-content">
                  <view>留言：{{conversation.content}}</view>
                  <view class="conversation-head-info-expandicon" data-index="{{commentIndex}}" bindtap="expandClick" wx:if="{{openid == db.masterInfo._openid || openid == item.slaveInfo._openid}}">
                    <image style="height:25rpx;width:25rpx;" src="../../assets/icons/expendLeft.png" class="expand-icon {{isExpand[commentIndex]? 'rotated':''}}" />
                  </view>
                </view>
              </view>
            </view>
            <view class="conversation-extend" hidden="{{!isExpand[commentIndex]}}">
              <block wx:if="{{conversationIndex != 0}}">
                <!-- 别人的聊天模板 -->
                <view class="conversation-master" wx:if="{{(conversation.isMaster && openid !==db.masterInfo._openid) || (!conversation.isMaster && openid === db.masterInfo._openid)}}">
                  <view class="conversation-extend-avatar">
                    <image class="conversation-extend-avatar-img" src="{{openid===db.masterInfo._openid?item.slaveInfo.avatarUrl:db.masterInfo.avatarUrl}}" mode="widthFix" />
                  </view>
                  <view class="conversation-extend-text">{{conversation.content}}</view>
                </view>
                <!-- 自己的聊天模板 -->
                <view class="conversation-slave" wx:else>
                  <view class="conversation-extend-text">{{conversation.content}}</view>
                  <view class="conversation-extend-avatar">
                    <image class="conversation-extend-avatar-img" src="{{openid ===db.masterInfo._openid?db.masterInfo.avatarUrl:item.slaveInfo.avatarUrl}}" mode="widthFix" />
                  </view>
                </view>
              </block>
            </view>
          </view>
          <!-- 这是回复栏 -->
          <view class="reply-box" wx:if="{{openid === db.masterInfo._openid || openid === item.slaveInfo._openid}}" hidden="{{!isExpand[commentIndex]}}">
            <input value="{{replyText}}" class="reply-text" bindinput="replyText" />
            <view class="reply-btn {{replyText?'reply-active':''}}" bindtap="{{replyText? 'onTapSend':''}}" data-index="{{item.noteIndex}}">
              <text>发送</text>
              <view class="reply-btn-plus  {{replyText?'plus-active':''}} {{textSending?'rotating':''}}">
                +
              </view>
            </view>
          </view>
        </view>
      </view>
      <view style="width:6vw;" />
      <!-- Wishlist -->
      <view class="board-right">
        <block wx:for="{{db.masterInfo.wishlist}}" wx:for-item="item" wx:key="wishlist" wx:if="{{db.content.wishlist}}">
          <view class="card" data-info="{{item}}" bindtap="onTapItem">
            <view class="card-content">
              <view class="card-content-bg" style="background-color:{{item.bg_color}};">
                <image class="card-content-item-bg" src="../../assets/nookea/card-bg.png" mode="widthFix" />
                <image class="card-content-item-collect" src="../../assets/nookea/cardCollectIcon.png" mode="widthFix" />
                <image class="card-content-item" src="{{item.img_url}}" mode="widthFix" />
              </view>
            </view>
            <view class="card-title">{{item.zh_name}}</view>
          </view>
        </block>
        <view class="board-right-warn" wx:if="{{!db.content.wishlist}}">
          <image style="width:60rpx; height:60rpx; margin-right:10rpx;" src="../../assets/icons/nook.png" mode="heightFix" />
          <view style="height:60rpx; line-height:60rpx;">房主暂时不接受心愿单物品交换哦~</view>
        </view>
      </view>
    </view>
  </view>

  <!-- mask -->
  <view class="mask" wx:if="{{showModal}}" bindtap="modalHide" />
  <!-- modal -->
  <view class="mymodal fade-in" wx:if="{{showModal}}">
    <view class="modal-text">添加回复</view>
    <view class="modal-option">
      <view class="modal-option-title">接受报价</view>
      <view class="modal-option-content">
        <view class="modal-option-content-btn {{paymentType.bell ? 'active': 'inactive'}}" data-name="bell" bindtap="paymentTypeCheck">
          <image class="modal-option-content-btn-icon" src="{{paymentType.bell ? img.BellIcon:img.BellIconGray}}" />
          <view>玲钱</view>
        </view>
        <view class="modal-option-content-btn {{paymentType.ticket ? 'active': 'inactive'}}" data-name="ticket" bindtap="paymentTypeCheck">
          <image class="modal-option-content-btn-icon" src="{{paymentType.ticket ? img.TicketIcon:img.TicketIconGray}}" />
          <view>机票</view>
        </view>
        <view class="modal-option-content-btn {{paymentType.wishlist ? 'active': 'inactive'}}" data-name="wishlist" bindtap="paymentTypeCheck">
          <image class="modal-option-content-btn-icon" src="{{paymentType.wishlist ? img.WishlistIcon:img.WishlistIconGray}}" />
          <view>心愿单</view>
        </view>
      </view>
    </view>
    <view class="modal-option">
      <view class="modal-option-title">留言</view>
      <view class="modal-option-content">
        <textarea bindinput="replyText" class="input-reply"></textarea>
      </view>
    </view>
    <view class="modal-btns">
      <view class="modal-btn" bindtap="modalHide">返回</view>
      <view class="modal-btn" bindtap="onTapClose">确定</view>
    </view>
    <image class="yellow-triangle" src="../../assets/icons/yellowTri.gif" />
  </view>
</block>