/* pages/nookeaRooms/nookeaRooms.wxss */
page {
  background-color: #f2f4dc;
  font-size: 26rpx;
}
.nookeaRooms {
  width: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  overflow-x: hidden;
}

.top-box {
  width: 94vw;
  display: flex;
  flex-direction: row;
  justify-items: center;
  align-items: center;
}
.master-avatar {
  width: 28%;
  padding: 20rpx;
}
.master-avatar-img {
  width: 100%;
  border-radius: 25rpx;
}
.info {
  width: 70%;
}

/* --- ITEM INFO --- */
.item-box {
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  align-items: center;
}
.item-img-box {
  border: 10rpx lightyellow solid;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
}

.item-img {
  width: 50rpx;
  height: 50rpx;
}

.userinfo,
.master-info {
  width: 100%;
  margin: 20rpx 0 0 0;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  font-size: 26rpx;
}

.avatar {
  border-radius: 50%;
  overflow: hidden;
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-img {
  max-width: 100%;
  max-height: 100%;
}

.master-info-detail {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-items: flex-start;
  align-items: center;
}
.master-info-icon {
  height: 30rpx;
  width: 30rpx;
}
.master-info-wechat {
  margin-top: 15rpx;
}
.master-island,
.master-name {
  margin-right: 10rpx;
  max-width: calc(50% - 40rpx);
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.content {
  width: 100%;
  margin-top: 15rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.content-item {
  display: flex;
  align-items: center;
  justify-items: center;
  margin-right: 10rpx;
}
.item-info {
  width: 60%;
  height: 100%;
  background-color: gray;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.item-tile {
  width: 100%;
  height: 13%;
  background-color: lightcyan;
}

.item-subtile {
  width: 100%;
  height: 13%;
  background-color: lightyellow;
}

.item-madeof {
  width: 100%;
  height: 74%;
  background-color: lightblue;
  overflow-y: scroll;
}
.item-info-icon {
  height: 35rpx;
  width: 35rpx;
}
.switch-box {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-items: center;
  align-items: center;
  justify-content: center;
  position: relative;
}
.right-btn,
.left-btn {
  width: 45%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.right-btn {
}
.switch-box-icon {
  height: 80rpx;
  width: 80rpx;
  margin-right: 15rpx;
}
.switch-box-text {
  transition: color 2s ease;
}
.active {
  color: #f2f4dc;
}
.inactive {
  color: #685b48;
}
.moving-box {
  width: 30%;
  height: 100rpx;
  position: absolute;
  background-color: #685b48;
  border-radius: 30rpx;
  z-index: -1;
  left: 12.5%;
}
.slide-left {
  animation: slideleft 0.5s ease-in-out 1;
  animation-fill-mode: forwards;
}
.slide-right {
  animation: slideright 0.5s ease-in-out 1;
  animation-fill-mode: forwards;
}
.note {
}
/* --- MARKET BOARD --- */
.board {
  width: 94%;
  display: flex;
  flex-direction: column;
}

.slave-reply {
  height: 60rpx;
  width: fit-content;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border: #685b48 1px solid;
  align-self: center;
  padding: 10rpx;
  border-radius: 15rpx;
}
.slave-reply-icon {
  height: 30rpx;
  width: 30rpx;
  line-height: 30rpx;
  font-size: 30rpx;
  text-align: center;
  background-color: #685b48;
  color: #f2f4dc;
  border-radius: 50%;
  margin-right: 10rpx;
}

.board-content {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.record {
  width: 100%;
  height: 200rpx;
  background-color: lightcoral;
  margin-bottom: 20rpx;
}

/*modal*/
.mymodal {
  width: 98%;
  height: fit-content;
  background-color: #224153;
  border-radius: 50rpx;
  opacity: 0.5;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  position: fixed;
  left: 1vw;
  bottom: 50vh;
  z-index: 20;
  transition: all 600ms ease-out;
  color: #f2f4dc;
}
.modal-option {
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}
.modal-option-title {
  width: 25%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-right: 15rpx;
}
.modal-option-content {
  width: 75%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.modal-option-content-btn {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-right: 10rpx;
}
.modal-option-content-btn-icon {
  height: 50rpx;
  width: 50rpx;
}
.modal-text {
  width: 100%;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  letter-spacing: 10rpx;
}

.modal-btns {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.modal-btn {
  width: 25%;
  padding: 0;
  font-size: 30rpx;
  letter-spacing: 5rpx;
  text-align: center;
}
.modal-leave-icon {
  width: 40rpx;
  height: 40rpx;
  position: fixed;
  left: calc(50% - 20rpx);
  bottom: 160rpx;
  z-index: 20;
}
.yellow-triangle {
  height: 30rpx;
  width: 30rpx;
  position: relative;
  bottom: -18rpx;
}

.fade-in {
  animation: fadein 0.5s ease-in-out 1;
  animation-fill-mode: forwards;
}
@keyframes fadein {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
@keyframes slideleft {
  from {
    left: 57.5%;
  }
  to {
    left: 12.5%;
  }
}
@keyframes slideright {
  from {
    left: 12.5%;
  }
  to {
    left: 57.5%;
  }
}
.input-reply {
  height: 100rpx;
  width: 70%;
  background-color: lightgray;
  border-radius: 10rpx;
  color: #685b48;
}
