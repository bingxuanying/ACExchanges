/* pages/nookeaGoods/nookeaGoods.wxss */
page {
  background-color: #fbfbdf;
}
.nookeaGoods {
  width: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  overflow-x: hidden;
}


/* --- HEADER --- */
.header {
  width: 100%;
  height: 120rpx;
  background-color: lightpink;
}


/* --- ITEM INFO --- */
.item-box {
  width: 94%;
  height: 500rpx;
  background-color: black;
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}

.item-img-box {
  width: 40%;
  height: 100%;
  background-color: lightsalmon;
}

.item-info {
  width: 60%;
  height: 100%;
  background-color: gray;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.item-tile {
  width: 100%;
  height: 13%;
  background-color: lightcyan;
}

.item-subtile {
  width: 100%;
  height: 13%;
  background-color: lightyellow;
}

.item-madeof {
  width: 100%;
  height: 74%;
  background-color: lightblue;
  overflow-y: scroll;
}


/* --- MARKET BOARD --- */
.board {
  width: 94%;
  display: flex;
  flex-direction: column;
}

.board-options {
  width: 100%;
  height: 100rpx;
  background-color: lightsalmon;
  margin-top: 30rpx;
}

.board-options {
  width: 100%;
  height: 100rpx;
  background-color: lightsalmon;
  margin: 30rpx 0;
}

.board-content {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.record {
  width: 100%;
  height: 200rpx;
  background-color: lightcoral;
  margin-bottom: 20rpx;
}