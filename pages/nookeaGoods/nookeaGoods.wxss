/* pages/nookeaGoods/nookeaGoods.wxss */
page {
  /* background-color: #fbfbdf; */
  background-color: #e7dfc3;
  font-size: 30rpx;
  color: #785b2f;
}
.nookeaGoods {
  width: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  overflow-x: hidden;
}


/* --- HEADER BAR --- */
.header-bar {
  height: 120rpx;
  width: 100%;
  z-index: 15;
}

.head-bar-bg {
  height: 120rpx;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}

.head-bar-logo {
  height: 120rpx;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}


/* --- ITEM INFO --- */
.item-box {
  width: 94%;
  min-height: 500rpx;
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  color: #785b2f;
}

.item-img-box {
  width: 40%;
  min-height: 100%;
  /* background-color: lightsalmon; */
  display: flex;
  align-items: center;
  justify-content: center;
}

.card-content {
  width: 230rpx;
  height: 300rpx;
  border-radius: 20rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.card-content-bg {
  width: 90%;
  height: 90%;
  border-radius: 8rpx;
  position: relative;
  box-shadow: 0 0 0 15rpx rgba(255, 255, 255, 0.3); 
  margin-right: 4rpx;
  overflow: hidden;
}

.card-content-item {
  width: 60%;
  height: 100rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.card-content-item-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.item-info {
  width: 60%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.item-title {
  width: 100%;
  height: 70rpx;
  font-size: 36rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  background-image: linear-gradient(
    to right,
    #785b2f 50%,
    rgba(255, 255, 255, 0) 0%
  );
  background-position: bottom;
  background-size: 28rpx 4rpx;
  background-repeat: repeat-x;
}

.item-title-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}

.item-madeof {
  width: 100%;
  height: 420rpx;
  margin-top: 10rpx;
  border-radius: 12rpx;
  background: repeating-linear-gradient( 
  180deg,
  #e0d7ae,
  #e0d7ae 70rpx,
  #e2d8b5 70rpx,
  #e2d8b5 140rpx);
  overflow: hidden;
}

.item-madeof-row {
  width: calc(100% - 20rpx);
  height: 70rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  padding-left: 5rpx;
  padding-right: 10rpx;
}

.item-madeof-row-icon {
  width: 60rpx;
  height: 60rpx;
}

.item-madeof-row-dash {
  flex: 1;
  height: 70rpx;
  background-image: linear-gradient(
    to right,
    #785b2f 50%,
    rgba(255, 255, 255, 0) 0%
  );
  background-position: center;
  background-size: 25rpx 4rpx;
  background-repeat: repeat-x;
  margin: 0 10rpx;
}


/* --- MARKET BOARD --- */
.board {
  width: 94%;
  display: flex;
  flex-direction: column;
  position: relative;
}

.board-options {
  width: 100%;
  height: 100rpx;
  background-color: lightsalmon;
  margin: 30rpx 0;
  display: flex;
  align-items: center;
}

.post-btn {
  width: 100rpx;
  height: 50rpx;
  background-color: lightblue;
}

.board-content {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.record {
  width: 100%;
  height: 200rpx;
  background-color: lightcoral;
  margin-bottom: 20rpx;
}


/* --- BOTTOM --- */
.board-bottom {
  width: 100%;
  height: 100rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: center;
  color: #716a58;
  font-size: 30rpx;
}

.board-bottom-nook {
  width: 50rpx;
  height: 50rpx;
}

.board-bottom-loading {
  width: 65rpx;
  height: 65rpx;
  margin-right: 20rpx;
}

.board-cant-find {
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  font-size: 30rpx;
}

.board-cant-find-nook {
  width: 75rpx;
  height: 75rpx;
  margin-left: 300rpx;
}


/* --- Loading GIF --- */
.pull-loading {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 300rpx;
  left: 50%;
  transform: translateX(-50%);
}