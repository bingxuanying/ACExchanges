/* pages/tradingFloor/tradingFloor.wxss */
.tradingFloor {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100vw;
}

.headBar {
  background-color: lightblue;
  width: 94%;
  height: 40px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.headBar-btn-order {
  height: 50%;
  font-size: 14px;
  line-height: 20px;
  padding: 0;
  background: transparent;
  border-radius: 0;
}

.headBar-btn-order-active {
  background: linear-gradient(0, orange 56%, transparent 44%);
}

.headBar-btn-room {
  height: 70%;
  float: right;
  font-size: 14px;
  line-height: 28px;
  padding: 0;
  border-radius: 15px;
}

.board {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 15px;
}

.card {
  width: 94%;
  margin-bottom: 10px;
  padding: 0;
}

.boardingpass {
  width: 100%;
}