/* pages/tradingFloor/tradingFloor.wxss */
page {
  background: #bac8ef;
}

.tradingFloor {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100vw;
  background-color: transparent;
}

.headBar {
  background-color: transparent;
  width: 100%;
  height: 90rpx;
  overflow: visible;
}

.headBar-bg {
  position: absolute;
  top: 0;
  left: 0;
  height: 120rpx;
  z-index: 1;
}

.headBar-btn-order {
  background: transparent;
  width: 143rpx;
  height: 51rpx;
  position: absolute;
  top: 40rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 50rpx;
  padding: 0;
  border-radius: 30%;
  z-index: 5;
  overflow: visible;
}

.headBar-btn-order-text {
  width: 100%;
  position: absolute;
  top: -47rpx;
  left: 0;
  color: #716a58;
}

.headBar-btn-order-active {
  color: #bad6fe;
  transform: rotate(2deg);
}

.headBar-btn-order-icon {
  width: 100%;
  position: absolute;
  top: -35rpx;
  left: 0;
}

.headBar-btn-room {
  background-color: #ece5c9;
  width: 94rpx;
  height: 94rpx;
  position: absolute;
  padding: 0;
  top: 10rpx;
  border-radius: 50%;
  z-index: 5;
  overflow: visible;
}

.headBar-btn-room-icon {
  width: 82%;
  position: absolute;
  left: 9%;
  top: 9%;
}

.headBar-btn-room-text {
  position: absolute;
  font-size: 29rpx;
  top: 60rpx;
  left: 18rpx;
  color: #716a58;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 10rpx;
}

.board {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50rpx;
}

.notFound {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 390rpx;
  color: #716a58;
  font-size: 30rpx;
}

.notFound-nook {
  width: 70rpx;
}

.card {
  width: 94%;
  position: relative;
  margin-bottom: 30rpx;
  padding: 0;
  color: #de733b;
}
.postcard {
  position: absolute;
  width: 100%;
  /* z-index: -1; */
}
.card-box-shader {
  width: 100%;
  height: 430rpx;
  position: relative;
  overflow: hidden;
}

.card-box {
  width: calc(94vw + 20vw);
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-content: flex-start;
  font-size: 28rpx;
  color: #7b653e;
}

.card-main {
  width: 94vw;
  position: relative;
}
.postcard-inner {
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.card-number {
  position: absolute;
  top: 18rpx;
  left: 40rpx;
  font-size: 38rpx;
}
.card-note {
  width: 65%;
  height: 75rpx;
  position: absolute;
  top: 122rpx;
  left: 120rpx;
  display: -webkit-box;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
  font-weight: normal;
}
.card-des {
  width: 62%;
  height: 50rpx;
  position: absolute;
  top: 200rpx;
  left: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  font-size: 26rpx;
  font-weight: normal;
}
.card-time {
  position: absolute;
  top: 300rpx;
  left: 50rpx;
  font-size: 28rpx;
  font-weight: normal;
}
.card-lineinfo {
  position: absolute;
  top: 340rpx;
  left: 50rpx;
  font-size: 28rpx;
  font-weight: normal;
}
.card-price {
  position: absolute;
  top: 305rpx;
  left: 470rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
  justify-items: center;
}
.card-price-icon {
  height: 80rpx;
}
.card-price-text {
  line-height: 80rpx;
  text-align: center;
  margin-right: 15rpx;
  font-size: 40rpx;
  font-weight: normal;
}
.card-price-text-bg {
  /* #faf8e1 */
  background: linear-gradient(0, orange 65%, transparent 35%);
}

.card-tools {
  width: 20vw;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.card-tools-share,
.card-tools-join {
  width: 100%;
  height: 40%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  align-content: center;
  margin-right: 13rpx;
}
.card-tools-share {
  background-color: rgba(255, 255, 255, 0);
}
.card-tools-icon {
  height: 100%;
}
.card-tools-btn {
  font-size: 24rpx;
  background-color: rgba(255, 255, 255, 0);
  color: #7b653e;
  line-height: inherit;
  text-align: center;
}
.card-bottom {
  width: 100%;
  height: 220rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: center;
  color: #716a58;
  font-size: 30rpx;
}
.card-bottom-nook {
  width: 50rpx;
}
.card-bottom-loading {
  width: 65rpx;
  margin-right: 20rpx;
}
.loadingGIF {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 450rpx;
  left: calc(50% - 50rpx);
}

/* animation */
.slide-left {
  animation: slideleft 1s ease-in-out 1;
  animation-fill-mode: forwards;
}
.slide-right {
  animation: slideright 1s ease-in-out 1;
  animation-fill-mode: forwards;
}
@keyframes slideleft {
  from {
    transform: translate(-20vw, 0);
  }
  to {
    transform: translate(0, 0);
  }
}
@keyframes slideright {
  from {
    transform: translate(0, 0);
  }
  to {
    transform: translate(-20vw, 0);
  }
}

/* mask */
.mask {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  top: 0;
  left: 0;
  z-index: 10;
  transition: all 300ms ease-out;
}

/* modal */
.mymodal {
  position: fixed;
  width: 100%;
  top: 200rpx;
  background-color: transparent;
  z-index: 20;
  transition: all 300ms ease-out;
}

.modal-img {
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.modal-search {
  width: 100rpx;
  position: absolute;
  top: 30rpx;
  left: 30rpx;
}

.modal-search-text {
  position: absolute;
  top: 60rpx;
  left: 150rpx;
  font-size: 34rpx;
  color: #746b26;
}

.modal-inputImg {
  width: 300rpx;
  position: absolute;
  top: 150rpx;
  left: 230rpx;
  z-index: 21;
}

.modal-inputBar {
  width: 230rpx;
  height: 50rpx;
  position: absolute;
  top: 170rpx;
  left: 267rpx;
  border: none;
  z-index: 21;
}

.modal-btn {
  font-size: 30rpx;
  border-radius: 27rpx;
  padding: 8rpx;
  position: absolute;
  top: 300rpx;
  z-index: 21;
}
