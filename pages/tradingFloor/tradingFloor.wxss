/* pages/tradingFloor/tradingFloor.wxss */
.tradingFloor {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100vw;
}

.headBar {
  background-color: lightblue;
  width: 94%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  border-radius: 25rpx;
}

.headBar-btn-order {
  height: 50%;
  font-size: 28rpx;
  padding: 0;
  background: transparent;
  border-radius: 0;
}

.headBar-btn-order-active {
  background: linear-gradient(0, orange 56%, transparent 44%);
}

.headBar-btn-room {
  height: 70%;
  float: right;
  font-size: 28rpx;
  line-height: 56rpx;
  padding: 0;
  border-radius: 30rpx;
}

.board {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 25rpx;
}

.card {
  width: 94%;
  position: relative;
  margin-bottom: 25rpx;
  padding: 0;
}

.boardingpass {
  width: 100%;
}

.card-note {
  position: absolute;
  top: 100rpx;
  left: 20rpx;
}

.loadingGIF {
  width: 100rpx;
  position: absolute;
  top: 450rpx;
  left: 330rpx;
}

/*mask*/
.mask{
  position: fixed;
  width:100%;
  height:100%;
  background:rgba(0,0,0,0.5);
  top:0;
  left:0;
  z-index: 10;
  transition: all 300ms ease-out;
}

/*modal*/
.mymodal{
  position: fixed;
  width: 100%;
  top: 200rpx;
  background-color: transparent;
  z-index: 20;
  transition: all 300ms ease-out;
}

.modal-img {
  width: 100%;
  top: 0;
  left: 0;
}

.modal-inputImg {
  width: 300rpx;
  position: absolute;
  top: 190rpx;
  left: 230rpx;
}

.modal-inputBar {
  width: 230rpx;
  height: 50rpx;
  position: absolute;
  top: 210rpx;
  left: 267rpx;
  border: none;
}

.modal-btn {
  font-size: 30rpx;
  border-radius: 27rpx;
  padding: 8rpx;
  position: absolute;
  top: 370rpx;
}