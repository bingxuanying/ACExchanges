/* pages/roomMaster/roomMaster.wxss */
page {
  background-color: #f99d78;
}
.roomMaster {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.info-box,
.tool-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
}
.info-box {
  width: 84%;
  height: 130rpx;
  background-color: #f5f7e1;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
  color: #716a58;
  border-radius: 100rpx;
}
.info-box-righticon, 
.info-box-lefticon {
  position: relative;
  height: 45rpx;
  width: 45rpx;
  left: 0%;
  bottom: -33%;
  color: #f2f4dc;
  background-color: #8a7b64;
  display: flex;
  align-content: center;
  justify-content: center;
  border-radius: 15rpx 0 0 0;
  border: #f2f4dc 2px solid;
}
.info-box-righticon {
  border-radius: 0 15rpx 0 0;
}
.maintitle{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}
.maintitle-box{
  width: 100%;
  height: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  overflow: hidden;
  position: relative;
}
.settingInfo{
  position: absolute;
  width: 70%;
  height: 130rpx - 14rpx;
  right: 110vw;
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-weight: bolder;
}
.page-indicator{
  height: 30rpx;
  width: 100%;
  margin: 5rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.dot {
  height: 20rpx;
  width: 20rpx;
  background-color: #bbb;
  border-radius: 50%;
  display: inline-block;
}
.circle {
  height: 15rpx;
  width: 15rpx;
  border-radius: 50%;
  display: inline-block;
  border: #00bca5 6rpx solid;
  position: relative;
  left: -23rpx;
}
.masterInfo {
  position: absolute;
  left: 10vw;
  width: 70%;
  height: 130rpx - 14rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-weight: bolder;
  
}
.masterInfo-avatar{
  width: 90rpx;
  height: 90rpx;
  background-color: #fda156;
  border-radius: 50%;
}
.masterInfo-masterData{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-left: 10rpx;
}
.masterInfo-islandName {
  width: 100%;
  height: 30rpx;
  font-size: 30rpx;
  letter-spacing: 3rpx;
  line-height: 30rpx;
  font-style: bolder;
  text-align: center;
}
.masterInfo-playerName {
  width: 100%;
  height: 24rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 24rpx;
  margin-top: 15rpx;
}

.room-box {
  position: relative;
  width: 94%;
  height: 80vh;
  background-color: #f5f7e1;
  border-radius: 50rpx;
  margin-top: 20rpx;
  padding-top: 10rpx;
  overflow: hidden;
}
.room-box-left{
  position: absolute;
  width: 100%;
  height: 80vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  overflow: scroll;
}
.room-box-right {
  position: absolute;
  right: 100vw;
  width: 100%;
  height: 80vh;
}
.slaveInfo {
  width: 96%;
  height: 100rpx;
  padding-bottom: 7rpx;
  margin-bottom: 7rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-image: linear-gradient(to right, #f89d80 33%, rgba(255,255,255,0) 0%);
  background-position: bottom;
  background-size: 28rpx 4rpx;
  background-repeat: repeat-x;
  overflow: hidden;
  font-size: 28rpx;
}
.slaveInfo-deleteicon{
  width: 8%;
  position: relative;
}
.slaveInfo-head {
  width: 32%;
  height: 90%;
  display:flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
}
.slaveInfo-head-top-green{
  height: 50%;
  background-color: #4fb262;
  border-radius: 30rpx;
  padding: 5rpx 15rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
  margin-bottom: 2.5rpx;
  color: #f8f5e6;

}
.slaveInfo-head-top-gray{
  height: 50%;
  background-color: #a4a49c;
  border-radius: 30rpx;
  padding: 5rpx 15rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
  margin-bottom: 2.5rpx;
  color: #bfc0b2;
}
.slaveInfo-head-top-icon{
  height: 32rpx;
  align-self: center;
  margin-right: 10rpx;
}
.slaveInfo-head-top-text {
  text-align:center;
  line-height:100%;
  align-self: center;
    overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.slaveInfo-head-bot{
  height: 50%;
  color: #716a58;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
}
.slaveInfo-head-bot-icon {
  height: 32rpx;
  align-self: center;
  margin-right: 10rpx;
}
.slaveInfo-head-bot-text {
  max-width: 220rpx;
  text-align:center;
  line-height:150%;
  align-self: center;
  color: #7a7359;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.slaveInfo-tail {
  width: 60%;
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: flex-start;
}
.slaveInfo-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background-color: white;
  margin-left: 10rpx;
}
.slaveInfo-playerName {
  height: 90%;
  margin-left: 10rpx;
  color: #e07642;
  font-weight: bolder;
  text-align:center;
  line-height:100%;
  align-self: center;
  font-size: 36rpx;
}

.tool-box {
  width: 94%;
  height: 50rpx;
  justify-content: center;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
}
.tool-closeBtn {
  width: 45%;
  height: 100%;
  background-color: #ddd1bb;
  border-radius: 50rpx;
  border: solid #f5f7e1 7rpx;
}
.tool-closeBtn-greenbox{
  width: 80%;
  height: 100%;
  background-color: #4fb262;
  border-radius: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
  position: relative;
  left: 20%;
}
.closeBtn-click{
  animation: toleft 1s ease-in-out 1;
  animation-fill-mode: forwards;
}
.closeBtn-unclick{
  animation: toright 1s ease-in-out 1;
  animation-fill-mode: forwards;}
.tool-box-icon {
  height: 80%;
  align-self: center;
}
.tool-box-text{
  color: #bef4c2;
  text-align:center;
  line-height:50rpx;
  font-size:30rpx;
}
.tool-box-minusicon {
  height: 43rpx;
  position: relative;
  right: 35rpx;
  bottom: -16rpx;
  z-index: 100;
}
.tool-changeBtn {
  width: 45%;
  height: 100%;
  margin-left: 30rpx;
  background-color: #fda156;
  border-radius: 50rpx;
  border: solid #f5f7e1 7rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
}

.circle-to-right{
  animation: circletoright 1s ease-in-out 1;
  animation-fill-mode: forwards;
}
.circle-to-left{
  animation: circletoleft 1s ease-in-out 1;
  animation-fill-mode: forwards;
}
.slide-to-left {
  animation: slidetoleft 1s ease-in-out 1;
  animation-fill-mode: forwards;
}
.slide-back-right {
  animation: slidebackright 1s ease-in-out 1;
  animation-fill-mode: forwards;
}
.slide-to-right {
  animation: slidetoright 1s ease-in-out 1;
  animation-fill-mode: forwards;
}
.slide-back-left {  
  animation: slidebackleft 1s ease-in-out 1;
  animation-fill-mode: forwards;
}
@keyframes toleft {
  from {
    left: 20%;
  }
  to{
    left: 0%;
  }
}
@keyframes toright {
  from {
    left: 0%;
  }
  to{
    left: 20%;
  }
}
@keyframes circletoleft{
  from{
    left: 23rpx;
  }
  to{
    left: -23rpx;
  }
}
@keyframes circletoright{
  from{
    left: -23rpx;
  }
  to{
    left: 23rpx;
  }
}
@keyframes slidetoleft {
  from {
    transform:translate(0,0) ;
    }
    to {
      transform:translate(-100vw,0) ;
    }
}
@keyframes slidebackright{
  from {
    transform:translate(-100vw,0) ;
    }
    to {
      transform:translate(0,0) ;
    }
}
@keyframes slidetoright{
    from {
      transform:translateX(100vw) ;
    }
    to {
      transform:translateX(200vw) ;
    }
}
@keyframes slidebackleft{
    from {
      transform:translateX(200vw);
    }
    to {
      transform:translateX(100vw) ;
    }
}

