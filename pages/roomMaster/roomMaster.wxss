/* Animation */
.circle-to-right {
  animation: circletoright 500ms ease-in-out 1;
  animation-fill-mode: forwards;
}
.circle-to-left {
  animation: circletoleft 500ms ease-in-out 1;
  animation-fill-mode: forwards;
}
.slide-left {
  animation: slideleft 500ms ease-in-out 1;
  animation-fill-mode: forwards;
}
.slide-right {
  animation: slideright 500ms ease-in-out 1;
  animation-fill-mode: forwards;
}
@keyframes toleft {
  from {
    left: 20%;
    background-color: #4fb262;
    color: #f8f5e6;
  }
  to {
    left: 0%;
    background-color: #a4a49c;
    color: #bbbcae;
  }
}
@keyframes toright {
  from {
    left: 0%;
    background-color: #a4a49c;
    color: #bbbcae;
  }
  to {
    left: 20%;
    background-color: #4fb262;
    color: #f8f5e6;
  }
}
@keyframes circletoleft {
  from {
    left: 18.5rpx;
  }
  to {
    left: -18.5rpx;
  }
}
@keyframes circletoright {
  from {
    left: -18.5rpx;
  }
  to {
    left: 18.5rpx;
  }
}
@keyframes slideleft {
  from {
    transform: translate(-100vw, 0);
  }
  to {
    transform: translate(0, 0);
  }
}
@keyframes slideright {
  from {
    transform: translate(0, 0);
  }
  to {
    transform: translate(-100vw, 0);
  }
}

