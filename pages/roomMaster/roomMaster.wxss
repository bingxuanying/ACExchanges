/*mask*/
.mask {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 10;
  transition: all 600ms ease-out;
}

/*modal*/
.mymodal {
  width: 98%;
  height: 320rpx;
  background-color: #224153;
  border-radius: 100rpx;
  opacity: 0.5;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: fixed;
  left: 1vw;
  bottom: 180rpx;
  z-index: 20;
  transition: all 600ms ease-out;
}

