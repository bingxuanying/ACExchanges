/*mask*/
.mask {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 10;
  transition: all 600ms ease-out;
}

/*modal*/
.mymodal {
  width: 100%;
  height: 320rpx;
  background-color: #224153;
  border-radius: 18%;
  opacity: 0.5;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: fixed;
  left: 0;
  bottom: 110rpx;
  z-index: 20;
  transition: all 600ms ease-out;
}

.modal-text {
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 34rpx;
  color: white;
  letter-spacing: 10rpx;
  margin-left: 40rpx;
}

.modal-options {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.modal-btn {
  width: 25%;
  padding: 0;
  font-size: 30rpx;
  color: white;
  letter-spacing: 5rpx;
  text-align: center;
}

.fade-in {
  animation: fadein 0.5s ease-in-out 1;
  animation-fill-mode: forwards;
}
@keyframes fadein {
  from {
    opacity: 0;
  }
  to {
    opacity: 0.9;
  }
}
