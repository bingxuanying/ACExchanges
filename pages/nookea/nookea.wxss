page {
  background-color: #fbfbdf;
}
.nookea {
  width: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  overflow-x: hidden;
}


/* --- HEADER BAR --- */
.header-bar {
  height: 120rpx;
  width: 100%;
  z-index: 15;
}

.head-bar-bg {
  height: 120rpx;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}

.head-bar-logo {
  height: 120rpx;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}


/* --- TOOL BAR --- */
.tool-bar {
  background-color: lightblue;
  height: 110rpx;
  width: 100%;
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  overflow: visible;
}

.tool-tag-box {
  width: 100rpx;
  height: 40%;
  background-color: gray;
  margin-left: 20rpx;
}

.tool-btn-box {
  width: 94rpx;
  background-image: linear-gradient(90deg, transparent 40%, black 40%, black 60%, transparent 60%);
  background-size: 100% 100%;
  background-repeat: no-repeat;
  position: absolute;
  top: -30rpx;
  overflow: visible;
  z-index: 11;
}

.tool-btn {
  background-color: #ece5c9;
  height: 94rpx;
  width: 94rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  border-radius: 50%;
  overflow: visible;
}

.tool-btn-icon {
  width: 82%;
  position: absolute;
  left: 9%;
  top: 9%;
}

.tool-btn-text {
  position: absolute;
  font-size: 29rpx;
  top: 60rpx;
  left: 18rpx;
  color: #716a58;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 10rpx;
}


/* --- BOARD  --- */
.board {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.deck {
  width: 100%;
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start;
}

.card {
  width: 28%;
  height: 300rpx;
  background-color: peru;
  margin-top: 20rpx;
  /* (full-width - 3 * self.width / 4) */
  margin-left: 4%;
}


/* --- BOTTOM --- */
.board-bottom {
  width: 100%;
  height: 220rpx;
  margin-top: 35rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: center;
  color: #716a58;
  font-size: 30rpx;
}

.board-bottom-nook {
  width: 50rpx;
  height: 50rpx;
}

.board-bottom-loading {
  width: 65rpx;
  height: 65rpx;
  margin-right: 20rpx;
}

.board-cant-find {
  width: 100%;
  /* 100% - header.height - toolbox.height */
  height: 500rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  font-size: 30rpx;
}

.board-cant-find-nook {
  width: 80rpx;
  height: 80rpx;
  margin-left: 300rpx;
}


/* --- MODAL LIKE --- */
.filter-curtain {
  width: 96%;
  height: 800rpx;
  background-color: #ff977f;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  position: absolute;
  left: 2%;
  /* -(self.height - header.height) */
  top: -710rpx;
  z-index: 11;
}

.curtain-filter-slide-down {
  animation: curtainslidedown-filter 500ms ease-in-out 1;
  animation-fill-mode: forwards;
}

.curtain-filter-slide-up {
  animation: curtainslideup-filter 500ms ease-in-out 1;
  animation-fill-mode: forwards;
}

@keyframes curtainslidedown-filter {
  from {  transform: translate(0, 0);  }
  to {  transform: translate(0, 800rpx);  }
}

@keyframes curtainslideup-filter {
  from {  transform: translate(0, 800rpx);  }
  to {  transform: translate(0, 0);  }
}

.search-curtain {
  width: 96%;
  height: 500rpx;
  background-color: #ff977f;
  position: absolute;
  left: 2%;
  /* -(self.height - header.height) */
  top: -410rpx;
  z-index: 11;
}

.curtain-search-slide-down {
  animation: curtainslidedown-search 500ms ease-in-out 1;
  animation-fill-mode: forwards;
}

.curtain-search-slide-up {
  animation: curtainslideup-search 500ms ease-in-out 1;
  animation-fill-mode: forwards;
}

@keyframes curtainslidedown-search {
  from {  transform: translate(0, 0);  }
  to {  transform: translate(0, 500rpx);  }
}

@keyframes curtainslideup-search {
  from {  transform: translate(0, 500rpx);  }
  to {  transform: translate(0, 0);  }
}


/* --- Modal: Search --- */
.search-box {
  width: 80%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-image: linear-gradient(90deg, #fbf6e0 75%, #d0e684 25%);
  background-size: 100% 100%;
  background-repeat: no-repeat;
  border-radius: 50rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  overflow: hidden;
}

.search-box input {
  width: calc(75% - 40rpx);
  height: 100%;
  padding-left: 40rpx;
  overflow-x: scroll;
}

.search-btn {
  width: 25%;
  height: 100%;
  background-color: transparent;
  position: relative;
}

.search-btn-icon {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}


/* --- Modal: Filter --- */
.filter-board {
  /* filter-curtain.height: 800rpx */
  width: 90%;
  height: 650rpx;
  background-color: lightyellow;
  margin-top: 50rpx;
  overflow-y: scroll;
}

.filter-board-row {
  width: 100%;
  margin-bottom: 20rpx;
  background-color: lightblue;
}

.filter-board-row-tile {

}

.filter-board-row-content {
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start;
}

.filter-curtain-bottom-bar {
  width: 90%;
  height: 80rpx;
  background-color: lightblue;
  margin-top: 10rpx;
}

.filter-board-row-tag {
  margin-right: 20rpx;
}


/* --- Mask --- */
.mask {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  top: 0;
  left: 0;
  z-index: 10;
}


/* --- Loading GIF --- */
.pull-loading {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}