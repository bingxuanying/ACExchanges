page {
  background-color: #fbfbdf;
}
.nookea {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  overflow-x: hidden;
}

.header-bar {
  background-color: lightpink;
  height: 120rpx;
  width: 100%;
  z-index: 1;
}

.tool-bar {
  background-color: lightblue;
  height: 110rpx;
  width: 100%;
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  overflow: visible;
}

.tool-tag-box {
  width: 100rpx;
  height: 40%;
  background-color: gray;
  margin-left: 20rpx;
}

.tool-btn-box {
  height: 100%;
  width: 94rpx;
  background-image: linear-gradient(90deg, transparent 45%, black 45%, black 60%, transparent 60%);
  background-size: 100% 100%;
  background-repeat: no-repeat;
  position: absolute;
  top: 0;
  right: 10rpx;
}

.tool-btn {
  background-color: gray;
  height: 94rpx;
  width: 94rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}

.filter-curtain {
  width: 96%;
  height: 400rpx;
  background-color: lightcoral;
  position: absolute;
  left: 2%;
  top: 0;
  z-index: 5;
}