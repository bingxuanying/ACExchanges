/* pages/profile/profile.wxss */
.profile {
  background-color: lightyellow;
  width: 100vw;
  height: 100vh;
}

.passport {
  width: 100%;
}

.userinfo {
  width: 270rpx;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar-background {
  width: 100%;
  position: absolute;
  top: 130rpx;
  left: 18rpx;
}

.userinfo-btn {
  height: 50rpx;
  position: absolute;
  top: 395rpx;
  left: 85rpx;
  padding: 5px 0;
  font-size: 28rpx;
}

.userinfo-avatar {
  width: 210rpx;
  height: 210rpx;
  position: absolute;
  top: 148rpx;
  left: 57rpx;
  border-radius: 44rpx;
}

.userinfo-name {
  position: absolute;
  top: 385rpx;
  left: 70rpx;
  transform: rotate(9deg);
  color: #000;
  font-size: 20rpx;
}

.personalInfo {
  width: 400rpx;
  position: absolute;
  top: 140rpx;
  left: 310rpx;
  padding-top: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  font-size: 26rpx;
}

.personalInfo-row {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  font-size: inherit;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: white 2px solid;
}

.personalInfo-icon {
  width: 12%;
  margin-top: 9rpx;
}

.personalInfo-title {
  width: 30%;
  margin-top: 7rpx;
  padding-left: 10rpx;
  font-size: inherit;
}

.personalInfo-input {
  width: 58%;
  height: 35rpx;
  background-color: lightyellow;
  border-radius: 10rpx;
  margin-left: 10rpx;
  padding: 5rpx 10rpx;
  font-size: inherit;
}

.fruit {
  width: 15%;
  margin-left: 15rpx;
}

.hemisphere {
  font-size: inherit;
}

.done {
  position: absolute;
  top: 450rpx;
  left: 300rpx;
  font-size: 30rpx;
  padding: 3rpx;
}

.warn {
  position: absolute;
  top: 220rpx;
  left: 400rpx;
}