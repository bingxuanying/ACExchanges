/* --- Modal AUTH --- */
/*modal_1: no auth*/
.mymodal-auth {
  height: 500rpx;
  width: 100%;
  position: fixed;
  top: 470rpx;
  left: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 30;
  transition: all 600ms ease-out;
}
.auth-name-tag {
  background-color: #de8729;
  height: 60rpx;
  width: 120rpx;
  border-radius: 100rpx;
  position: absolute;
  top: 60rpx;
  left: 30rpx;
  transform: rotate(-9deg);
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  letter-spacing: 4rpx;
  color: #5f1903;
  font-weight: 500;
}
.auth-chat-box {
  background-color: #f5efd5;
  height: 300rpx;
  width: 96%;
  border-radius: 100rpx;
  text-align: center;
  line-height: 300rpx;
  color: #756850;
}
.auth-savingGIF {
  width: 260rpx;
  position: absolute;
  top: 170rpx;
  left: 120rpx;
}
.auth-chat-icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: calc(50% - 20rpx);
  top: 380rpx;
}
/*modal_2: no name*/
.mymodal-name {
  height: 500rpx;
  width: 100%;
  position: fixed;
  top: 420rpx;
  left: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 30;
  transition: all 600ms ease-out;
}
.name-name-tag {
  background-color: #de8729;
  height: 60rpx;
  width: 120rpx;
  border-radius: 100rpx;
  position: absolute;
  top: 20rpx;
  left: 30rpx;
  transform: rotate(-9deg);
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  letter-spacing: 4rpx;
  color: #5f1903;
  font-weight: 500;
}
.name-chat-box {
  background-color: #f5efd5;
  height: 400rpx;
  width: 96%;
  border-radius: 100rpx;
  color: #756850;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.name-chat-content {
  text-align: center;
  margin-bottom: 60rpx;
}
.name-chat-box-row {
  width: 500rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  font-size: inherit;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: #f5efd5 2px solid;
}
.name-chat-box-icon {
  width: 12%;
  margin-top: 9rpx;
}
.name-chat-box-title {
  width: 30%;
  margin-top: 7rpx;
  padding-left: 10rpx;
  font-size: inherit;
}
.name-chat-box-input {
  width: 58%;
  height: 35rpx;
  background-color: lightyellow;
  border-radius: 10rpx;
  margin-left: 10rpx;
  padding: 5rpx 10rpx;
  font-size: inherit;
}
.name-chat-icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: calc(50% - 20rpx);
  top: 430rpx;
}
.name-savingGIF {
  width: 260rpx;
  position: relative;
  margin-top: -30rpx;
}
/* btn */
.noAuthName-btn {
  position: fixed;
  top: 900rpx;
  font-size: 30rpx;
  padding: 3rpx;
  background-color: #faf7e0;
  border: #000000;
  border-radius: 32rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  z-index: 30;
}
.mask20 {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  top: 0;
  left: 0;
  z-index: 20;
}
/* --- General Animation --- */
.fade-in {
  animation: fadein 0.5s ease-in-out 1;
  animation-fill-mode: forwards;
}
@keyframes fadein {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
